<!-- activity_settings.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <CheckBox
        android:id="@+id/nameCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Show Name"
        app:layout_constraintTop_toBottomOf="@+id/backButton"

        tools:ignore="HardcodedText" />

    <CheckBox
        android:id="@+id/phoneNumberCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameCheckBox"
        android:layout_marginTop="9dp"
        android:checked="true"
        android:text="Show Phone Number"
        tools:ignore="HardcodedText" />

    <CheckBox
        android:id="@+id/EmailCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneNumberCheckBox"
        android:layout_marginTop="9dp"
        android:checked="true"
        android:text="Show Email"
        tools:ignore="HardcodedText" />

    <CheckBox
        android:id="@+id/AddressCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/EmailCheckBox"
        android:layout_marginTop="9dp"
        android:checked="true"
        android:text="Show Address"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="onBackPressed"
        android:text="Back"
        android:layout_below="@id/AddressCheckBox"

        app:layout_constraintStart_toEndOf="@+id/phoneNumberCheckBox" />

</RelativeLayout>
