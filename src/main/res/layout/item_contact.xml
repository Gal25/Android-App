<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="80dp"
        android:layout_height="27dp"
        android:layout_marginEnd="52dp"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        android:textSize="18sp"
        android:textStyle="bold"

        app:layout_constraintEnd_toStartOf="@+id/textViewPhoneNumber"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="31dp" />

    <TextView
        android:id="@+id/textViewPhoneNumber"
        android:layout_width="83dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:drawableLeft="@drawable/ic_baseline_local_phone_24"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textViewName"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="31dp" />
    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="94dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textViewPhoneNumber"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="31dp" />
    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="94dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:drawableLeft="@drawable/ic_baseline_location_city_24"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textViewEmail"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="31dp" />




</androidx.constraintlayout.widget.ConstraintLayout>